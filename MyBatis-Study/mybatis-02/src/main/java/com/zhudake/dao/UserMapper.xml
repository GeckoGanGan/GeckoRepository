<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace = 绑定一个对应的Mapper接口-->
<mapper namespace="com.zhudake.dao.UserMapper">

    <!--查询语句-->
    <!--绑定实现的方法的名字-->
    <select id="getUserList" resultType="user">
        select * from mybatis.user;
    </select>

    <!--条件查询-->
    <select id="getUserById" parameterType="int" resultType="com.zhudake.pojo.User">
        select * from  mybatis.user where id = #{id};
    </select>

    <!--修改用户-->
    <update id="updateUser" parameterType="com.zhudake.pojo.User">
        update mybatis.user set name = #{name},pwd = #{pwd} where id = #{id};
    </update>

    <!--根据id删除用户-->
    <delete id="delUser" parameterType="int">
        delete from mybatis.user where id = #{id};
    </delete>

    <!--添加用户-->
    <insert id="addUser" parameterType="com.zhudake.pojo.User">
        insert into mybatis.user(id, name, pwd) VALUES (#{id},#{name},#{pwd});
    </insert>
</mapper>