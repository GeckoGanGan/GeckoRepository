<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhudake.dao.TeacherMapper">
    <!--第一种方式，通过结果嵌套处理-->
    <select id="getTeacherById" resultMap="map">
        select s.id sid,s.name sname,t.id tid,t.name tname
        from mybatis.student s,mybatis.teacher t
        where s.tid = t.id and t.id = #{tid};
    </select>
    <resultMap id="map" type="teacher">
        <result property="id" column="tid"/>
        <result property="name" column="tname"/>
        <collection property="studentList" ofType="student">
            <result property="id" column="sid"/>
            <result property="name" column="sname"/>
            <result property="tid" column="tid"/>
        </collection>
    </resultMap>

    <!--第二种方式 通过查询嵌套处理-->
    <select id="getTeacherById2" resultMap="map2">
        select * from mybatis.teacher;
    </select>
    <resultMap id="map2" type="teacher">
        <collection property="studentList" javaType="ArrayList" ofType="student" column="id" select="selectStudentByTeacherId">
        </collection>
    </resultMap>
    <select id="selectStudentByTeacherId" resultType="student">
        select * from mybatis.student where tid = #{id}
    </select>

</mapper>
