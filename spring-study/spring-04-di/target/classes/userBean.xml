<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--
         P(属性: properties)命名空间 ,可以直接注入属性的值:property
    -->
    <bean id="user" class="com.zhudake.pojo.User" p:age="18" p:name="朱大可"></bean>


    <!--
        C(构造: Constructor)命名空间 , 通过构造器注入：construct-args
    -->
    <bean id="user2" class="com.zhudake.pojo.User" c:name="zhudake" c:age="17"></bean>
</beans>